# === CONFIGURAÇÕES DA APLICAÇÃO ===
APP_NAME=Robot-Crypt API
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# === CONFIGURAÇÕES DE SEGURANÇA ===
# GERE UMA CHAVE SEGURA: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === CONFIGURAÇÕES DO BANCO DE DADOS ===
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/robot_crypt
DATABASE_ECHO=false

# === CONFIGURAÇÕES DE CORS ===
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# === CONFIGURAÇÕES DA BINANCE ===
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
USE_TESTNET=true
SIMULATION_MODE=true

# === CONFIGURAÇÕES DE TRADING ===
TRADING_PAIRS=BTC/USDT,ETH/USDT,BNB/USDT
TRADE_AMOUNT=100.0
TAKE_PROFIT_PERCENTAGE=2.0
STOP_LOSS_PERCENTAGE=1.0
MAX_CONSECUTIVE_LOSSES=3
RISK_REDUCTION_FACTOR=0.5

# === CONFIGURAÇÕES DE NOTIFICAÇÃO ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === CONFIGURAÇÕES DE APIs EXTERNAS ===
COINMARKETCAL_API_KEY=your_coinmarketcal_api_key_here
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here
NEWS_API_KEY=your_news_api_key_here

# === CONFIGURAÇÕES DE CACHE E RATE LIMITING ===
CACHE_TTL=300
RATE_LIMIT_PER_MINUTE=60

# === CONFIGURAÇÕES DE SEGURANÇA AVANÇADA ===
# Chave para criptografia de dados sensíveis (gerar com: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=
# Redis para blacklist de tokens JWT
REDIS_URL=redis://localhost:6379/0
# Configurações SSL/TLS
ENFORCE_HTTPS=true
SSL_CERT_PATH=
SSL_KEY_PATH=

# === CONFIGURAÇÕES LEGADAS (COMPATIBILIDADE) ===
# Para compatibilidade com código existente
ENTRY_DELAY=60
MAX_HOLD_TIME=86400
MINIMUM_TRADING_VOLUME=100000
